@model MegaHockey.Models.HistoryRecord

@{
    ViewData["Title"] = "Удалить";
}

<h1>Удалить</h1>

<h3>Вы точно хотите удалить данную запись?</h3>
<div>
    <dl class="row">
        <dt class = "col-sm-2">
            Хозяева
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.First)
        </dd>
        <dt class = "col-sm-2">
            Гости
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Second)
        </dd>
        <dt class = "col-sm-2">
            Победитель
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.GameResult)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-action="Index">Назад к списку</a>
    </form>
</div>
